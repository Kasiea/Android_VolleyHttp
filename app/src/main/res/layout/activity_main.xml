<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yeqinglu.volley_http.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/get_http"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get_Http"/>

    <Button
        android:id="@+id/json_http"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="json_http"/>

    <Button
        android:id="@+id/image_http"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="image_http"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="220dp" />

    <Button
        android:id="@+id/imageLoader_http"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="imageLoader_http"/>

    <ImageView
        android:id="@+id/imageLoaderView"
        android:layout_width="match_parent"
        android:layout_height="220dp" />

    <Button
        android:id="@+id/newtworkImage_http"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="newtworkImage_http"/>

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/networkImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</ScrollView>
